<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvJugador"
        android:layout_width="match_parent"
        android:layout_height="282dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Nombre"
                android:padding="5dp" />

            <TextView
                android:id="@+id/tvPosicion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="PosiciÃ³n"
                android:padding="5dp" />

            <TextView
                android:id="@+id/tvEdad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Edad"
                android:padding="5dp" />

            <TextView
                android:id="@+id/tvEstatura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Estatura"
                android:padding="5dp" />

            <TextView
                android:id="@+id/tvDorsal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Dorsal"
                android:padding="5dp" />

            <TextView
                android:id="@+id/tvFechaNacimiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Fecha de Nacimiento"
                android:padding="5dp" />

            <TextView
                android:id="@+id/tvConvocado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Convocado"
                android:padding="5dp" />

            <Button
                android:id="@+id/btnBorrar"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#2196F3"
                android:padding="5dp"
                android:text="Borrar"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                app:cornerRadius="5px"
                app:iconTint="#2F628A"
                app:strokeColor="#651010" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>